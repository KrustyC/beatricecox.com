generator client {
  provider = "prisma-client-js"
   output   = "generated/client"
}

datasource db {
  provider = "postgresql"
}

model Project {
  sanityId String @id

  successorId String?  @unique
  successor   Project? @relation("ProjectsOrder", fields: [successorId], references: [sanityId])
  predecessor Project? @relation("ProjectsOrder")
}